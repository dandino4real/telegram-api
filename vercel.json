{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook/(crypto|forex)",
      "dest": "src/index.ts",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "env": {
    "BOT_TOKEN_CRYPTO": "@bot-token-crypto",
    "BOT_TOKEN_FOREX": "@bot-token-forex",
    "MONGO_URI": "@mongo-uri",
    "VERCEL_URL": "@vercel-url"
  }
}